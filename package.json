{
  "name": "booksmith",
  "type": "module",
  "version": "1.0.0-next.1",
  "description": "A simple bookdown generator",
  "author": "Jerry Thomas<me@jerrythomas.name>",
  "license": "MIT",
  "bin": "./src/index.js",
  "main": "src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "git://github.com/jerrythomas/booksmith.git",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest --coverage",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "bump": "bumpp",
    "bump:next": "pnpm bump --next",
    "release": "pnpm publish --access public",
    "coverage:lcov": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/ramda": "^0.30.2",
    "@vitest/coverage-v8": "2.1.2",
    "bumpp": "^9.6.1",
    "globals": "^15.10.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@lukeed/uuid": "^2.0.1",
    "@types/eslint__js": "^8.42.3",
    "adm-zip": "^0.5.16",
    "eslint": "^9.11.1",
    "front-matter": "^4.0.2",
    "jsdom": "^25.0.1",
    "jszip": "^3.10.1",
    "marked": "^14.1.2",
    "ramda": "^0.30.1",
    "sade": "^1.8.1",
    "vitest": "^2.1.2",
    "xml2js": "^0.6.2"
  }
}
