{
  "name": "booksmith",
  "version": "1.0.0-next.2",
  "description": "A simple bookdown generator",
  "author": "Jerry Thomas<me@jerrythomas.name>",
  "license": "MIT",
  "bin": "./src/index.js",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": "git://github.com/jerrythomas/booksmith.git",
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "bump": "bumpp",
    "bump:next": "pnpm bump --next",
    "release": "pnpm publish --access public",
    "coverage:lcov": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/ramda": "^0.30.2",
    "@vitest/coverage-v8": "3.1.4",
    "bumpp": "^10.1.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENCE",
    "src/**/*.js"
  ],
  "dependencies": {
    "@lukeed/uuid": "^2.0.1",
    "@types/eslint__js": "^9.14.0",
    "adm-zip": "^0.5.16",
    "eslint": "^9.27.0",
    "front-matter": "^4.0.2",
    "jsdom": "^26.1.0",
    "jszip": "^3.10.1",
    "marked": "^15.0.12",
    "ramda": "^0.30.1",
    "sade": "^1.8.1",
    "vitest": "^3.1.4",
    "xml2js": "^0.6.2"
  }
}
